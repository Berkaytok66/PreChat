<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="56dp"
        android:layout_marginLeft="3dp"
        android:layout_height="56dp"
        android:id="@+id/chat_item_imgProfil"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/teal_700"/>

    <TextView
        android:id="@+id/chat_item_txtmesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/chat_item_imgProfil"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font2"
        android:layout_toRightOf="@id/chat_item_imgProfil"
        android:background="@drawable/chat_item_bg_left"
        android:padding="7dp"
     />

</RelativeLayout>