<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gelen_mesaj_istekleri_card_tasarim_imageView"
            android:layout_width="77dp"
            android:layout_height="77dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/gelen_mesaj_istekleri_card_tasarim_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/xxx"
            android:layout_toRightOf="@id/gelen_mesaj_istekleri_card_tasarim_imageView"
            android:textSize="12dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/xxx"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/gelen_mesaj_istekleri_card_tasarim_OK_BTN"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_check_circle_24"
                app:tint="#1FC53A" />
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/gelen_mesaj_istekleri_card_tasarim_Ä°PTAL_BTN"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="#FF4F4F" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>